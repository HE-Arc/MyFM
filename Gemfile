source 'http://rubygems.org'

# Version for deploy on server: appweb.labinfo.eiaj.ch
gem 'rails', '3.1.2'

# Database type: MySQL
gem 'mysql2'

# Rails authentication & authorization with email & password
# Link: https://github.com/thoughtbot/clearance
