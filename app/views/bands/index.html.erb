<h1>Listing bands</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Creation date</th>
    <th>Lastfm url</th>
    <th>Bio</th>
    <th>Twitter url</th>
    <th>Avatar</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bands.each do |band| %>
  <tr>
    <td><%= band.name %></td>
    <td><%= band.creation_date %></td>
    <td><%= band.lastFM_url %></td>
    <td><%= band.bio %></td>
    <td><%= band.twitter_url %></td>
    <td><%= band.avatar %></td>
    <td><%= link_to 'Show', band %></td>
    <td><%= link_to 'Edit', edit_band_path(band) %></td>
    <td><%= link_to 'Destroy', band, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

