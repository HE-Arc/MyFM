<div class="information">
<p id="notice"><%= notice %></p>

<h1><%= @band.name %></h1>
<% if @is_admin_of_band %>
  <%= link_to "Edit band", edit_band_path(@band)%>
<% end %>

<p class="famous_songs">
Made famous for the songs 
<% a = Array.new %>
<% @artist.top_tracks.each do |t| %>
	<% a.push(t.name) %>
<% end %>
<%= a.join(", ") %>
</p>

<% if @is_admin_of_band %>
	<h2>What's up?</h2>
	<%= form_for [@band, @post] do |f| %>
		<%= f.label :content %><br />
		<%= f.text_field :content %><br />
		<%= f.submit %>
	<% end %>
<% end %>
<table class="profile">
	<td class="sidebar">
		<strong>Creation date</strong> <%= @band.creation_date %><br />
		<strong>LastFM</strong> <%= @band.lastFM_bandname %><br />
		<strong>Bio</strong> <%= @band.bio %><br />
		<strong>URL</strong> <%= link_to band_path(@band), @band %><br />
		<strong>Messages</strong> <%= @band.posts.count %><br />
	</td>
	<td class="main">
		<% unless @band.posts.empty? %>
        <table class="posts">
          <%= render @posts %>
        </table>
        <%= will_paginate @posts %>
      <% end %>
	</td>
</table>

