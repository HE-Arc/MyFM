<p id="notice"><%= notice %></p>

<h1>
<%= gravatar_image_tag @user.email %>
<%= @user.firstname + " " + @user.name %>
</h1>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Firstname:</b>
  <%= @user.firstname %>
</p>

<p>
	<b>Email:</b>
	<%= @user.email %>
</p>

<p>
	<b>Birthday:</b>
	<%= @user.borndate %>
</p>

<p>
  <b>last signed in at:</b>
  <%= @user.last_signed_in_at%>
</p>

<p>
  <b>URL:</b>
  <%= link_to user_path(@user), @user %>
</p>